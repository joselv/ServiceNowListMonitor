{
    "name": "HI Checker",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Checks HI for updates to new incidents assigned to me",
    "options_page": "options.html",
    "permissions": [
        "storage",
        "alarms",
        "https://hi.service-now.com/",
        "notifications"
    ],
    "browser_action": {
        "default_icon": "bug-todo.png",
        "default_title": "Working list",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "background.js",
            "underscore.js"
        ],
        "persistent": true
    }
}
