    {
    "name": "ServiceNow List Monitor",
    "short_name":"ServiceNow List Monitor",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Monitors additions/changes to records in a ServiceNow table",
    "options_page": "options.html",
    "permissions": [
        "storage",
        "alarms",        
        "https://*.service-now.com/",
        "notifications",
        "tabs",
        "idle"
    ],
    "browser_action": {
        "default_icon": "list.png",
        "default_title": "Monitored List"
    },
    "background": {
        "scripts": [
            "background.js",
            "underscore.js"
        ],
        "persistent": true
    }
}
